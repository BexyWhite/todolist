<view class='button-container' wx:if="{{false}}">
    <button bindtap='navigateToPage' data-page='calendar' class='button'>日历测试</button>
</view>
<view class='button-container' wx:if="{{false}}">
    <button bindtap='navigateToPage' data-page='testChart' class='button'>图表测试</button>
</view>
<view class='button-container'>
    <button bindtap='navigateToPage' data-page='monthList' class='button'>月视图测试</button>
</view>
<view class='button-container'>
    <button bindtap='navigateToPage' data-page='dayList' class='button'>日视图测试</button>
